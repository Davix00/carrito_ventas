
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-2">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header"> <i class="fas fa-users me-1"></i> Lista de usuarios </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">+ Añadir Usuario</button>
            </div>
        </div>

        <hr />

        <table id="usersTable" class="display cell-border" width="100%">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                </tr>
            </thead>   
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        let tablaData; 

        tablaData = $("#usersTable").DataTable({
            responsive: true,
            ordening: false,
            "ajax": {
                url: '@Url.Action("ListarUsuarios","Home")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "nombres" },
                { "data": "apellidos" },
                { "data": "correo" },
                {"data": "activo"}
            ]
        });
    </script>
}